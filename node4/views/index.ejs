<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen p-2 bg-zinc-900 text-zinc-200">
    <form action="/create" method="post" class=" bg-zinc-600 rounded-xl" >
        <div class="box p-2 ">
            <input type="name" class="w-full rounded-md bg-zinc-800 pl-2" placeholder="Task name" name="title">
          </div>
<div class="box p-2">
            <textarea  class="w-full rounded-md bg-zinc-800 pl-2" placeholder="Enter your task detail" name="details"></textarea>
        </div>
    
        <button class="border-2 m-2 px-2 py-1 rounded-xl border-zinc-100" >Create</button>
    </form>
    <div class="tasks py-2 flex overflow-hidden gap-5 flex-wrap">
        <% if(files.length > 0){ %>
        <% files.forEach((el)=>{ %>
          <% a =  el.split(".")  %>
<div class="task bg-zinc-700 rounded-xl min-w-72 p-2">
            <h1 class=" tracking-tighter text-3xl"><%= a[0]%></h1>
            <a class="text-blue-500 hover:cursor-pointer font-extrabold " href="#">Read more</a>
        </div>
        <% })} else{  %>
        <h1 class="text-zinc-500 text-2xl font-bold">no task yet.</h1>
        <% } %>
    </div>
  </div>
</body>
</html>